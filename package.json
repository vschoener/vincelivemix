{
  "name": "vincelivemix",
  "version": "0.0.2",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm rum lint -- --fix",
    "prettier": "prettier -l '{src,test}/**/*.{ts,yml,yaml,json,md}'",
    "prettier:write": "prettier --write '{src,test}/**/*.{ts,yml,yaml,json,md}'",
    "test": "npm run lint && npm run test:unit && npm run test:e2e",
    "test:unit": "LOGGER_LEVEL=FATAL jest",
    "test:unit:cov": "npm run test:unit -- --coverage",
    "test:watch": "jest --watch",
    "test:cov": "npm run lint && npm run test:unit:cov && npm run test:e2e:cov",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "LOGGER_LEVEL=FATAL jest --config ./test/jest-e2e.json  --runInBand",
    "test:e2e:cov": "npm run test:e2e -- --coverage",
    "typeorm:dev": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/config/typeorm-cli.config.ts",
    "typeorm:prod": "./node_modules/typeorm/cli.js --config dist/config/typeorm-cli.config.js",
    "migration:generate": "npm run typeorm:dev migration:generate -- -n",
    "migration:create": "npm run typeorm:dev migration:create -- -n",
    "migration:run": "npm run typeorm:dev migration:run",
    "migration:run:prod": "npm run typeorm:prod migration:run"
  },
  "dependencies": {
    "@nestjs/common": "8.0.6",
    "@nestjs/core": "8.0.6",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.0",
    "@nestjs/platform-express": "8.0.6",
    "@nestjs/typeorm": "8.0.2",
    "bcrypt": "^5.0.0",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "dotenv": "10.0.0",
    "feed": "4.2.2",
    "multer": "1.4.3",
    "nest-winston": "1.5.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "8.7.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.3.0",
    "typeorm": "0.2.37",
    "uuid": "8.3.2",
    "winston": "3.3.3",
    "xmlbuilder2": "3.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.1",
    "@nestjs/schematics": "8.0.2",
    "@nestjs/testing": "8.0.6",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.1",
    "@types/multer": "1.4.7",
    "@types/node": "16.7.1",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-prettier": "3.4.1",
    "jest": "27.0.6",
    "jest-environment-node": "^27.0.0",
    "prettier": "2.3.2",
    "supertest": "6.1.6",
    "testcontainers": "^7.10.0",
    "ts-jest": "27.0.5",
    "ts-loader": "9.2.5",
    "ts-node": "10.2.1",
    "tsc-watch": "4.5.0",
    "tsconfig-paths": "3.10.1",
    "tslint": "6.1.3",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage/unit",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.ts",
      "!main.ts",
      "!**/*.spec.ts",
      "!migrations/*",
      "!**/*.module.ts",
      "!config/typeorm-cli.config.ts"
    ]
  }
}
