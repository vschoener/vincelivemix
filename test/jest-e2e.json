{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testMatch": ["**/test/**/*.e2e-spec.ts"],
  "coverageDirectory": "<rootDir>/coverage/e2e",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/src/**/*.spec.ts",
    "!<rootDir>/src/**/*.fixture.ts",
    "!<rootDir>/src/main.ts",
    "!<rootDir>/src/config/typeorm-cli.config.ts",
    "!<rootDir>/src/migrations/*"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
